<resources>
    <!-- Base application theme. -->
    <style name="Theme.AppMovil202215" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/violet_background_button</item>
        <item name="colorPrimaryVariant">@color/violet_background_button</item>
        <item name="colorOnPrimary">@color/violet_background_button</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSecondaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AppMovil202215.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#fff</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">@color/violet_background_button</item>
        <item name="android:textColorHint">@color/violet_background_button</item>
    </style>

    <style name="MyHintStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/violet_background_button</item>
    </style>

</resources>